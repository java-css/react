/* pages/videoDetail/videDetail.wxss */

page {
  height: 100vh;
}

.page-section {
  width: 100vw;
  height: 100vh;
}

swiper {
  height: 100vh;
}

video {
  width: 100vw;
  height: 100vh;
  /* display: block; */
  position: absolute;
  top: 0;
  left: 0;
}

.icon-goBack {
  float: left;
  width: 25px;
  height: 25px;
  padding: 5px;
  position: absolute;
  top: 30px;
  left: 20px;
  z-index: 100;
}

.guide_label {
  width: 60vw;
  position: absolute;
  top: 88vh;
  left: 15px;
  font-size: 14px;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
}

.list_name {
  font-size: 16px;
  font-weight: bold;
  top: 85vh;
}

/* content */

.viewchat_video {
  position: fixed;
  right: 0;
  top: 85vh;
  height: 40px;
  width: 110px;
}

.pause {
  position: absolute;
  right: 10px;
  top: 40%;
  margin-top: 20px;
}

.icon-img {
  width: 44px;
  height: 44px;
}

.icon-num {
  font-size: 14px;
  text-align: center;
  color: #fff;
}

.topNum {
  top: 50%;
}

.topNums {
  top: 60%;
}

.btn-share {
  position: absolute;
  font-size: 12px;
}

